{
  "extends": "./node_modules/gts/",
  "env": {
    "es2020": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
    "array-bracket-spacing": [ "error", "always" ],
    "computed-property-spacing": "off",
    "indent": [ "error", 4 ],
    "max-len": [ "error", 120 ],
    "new-cap": "off",
    "@typescript-eslint/no-explicit-any": 0,
    "object-curly-spacing": [ "error", "always" ],
    "padded-blocks": "off",
    "prettier/prettier": 0,
    "require-jsdoc": "off"
  }
}
